{
  "manifest_version": 3,
  "name": "Aorta Friday",
  "version": "0.0.1",
  "description": "聊TA 开发测试辅助 Chrome 插件",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "聊TA 开发测试辅助 Chrome 插件",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "browsingData",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*",
    "<all_urls>"
  ]
}
